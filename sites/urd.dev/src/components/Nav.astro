<nav class="site-nav" aria-label="Site navigation">
  <a href="/" class="nav-wordmark">URD.DEV</a>
  <div class="nav-links">
    <a href="/#documents" class="nav-link">Documents</a>
    <a
      href="https://github.com/urdwyrd/urd"
      class="nav-link"
      target="_blank"
      rel="noopener noreferrer"
    >
      GitHub <span aria-hidden="true">â†—</span>
    </a>
    <button
      id="theme-toggle"
      class="theme-toggle"
      type="button"
      aria-label="Switch to light theme"
      title="Switch to light theme"
    >
      <span class="theme-toggle-dark">Light</span>
      <span class="theme-toggle-light">Dark</span>
    </button>
  </div>
</nav>

<script>
  const btn = document.getElementById('theme-toggle');
  if (btn) {
    btn.addEventListener('click', () => {
      const html = document.documentElement;
      const isParchment = html.getAttribute('data-theme') === 'parchment';
      if (isParchment) {
        html.removeAttribute('data-theme');
        localStorage.setItem('urd-theme', 'gloaming');
        btn.setAttribute('aria-label', 'Switch to light theme');
        btn.setAttribute('title', 'Switch to light theme');
      } else {
        html.setAttribute('data-theme', 'parchment');
        localStorage.setItem('urd-theme', 'parchment');
        btn.setAttribute('aria-label', 'Switch to dark theme');
        btn.setAttribute('title', 'Switch to dark theme');
      }
    });
  }
</script>

<style>
  .site-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1160px;
    margin: 0 auto;
    padding: 16px 32px;
    border-bottom: 1px solid var(--border);
    position: relative;
    z-index: 2;
  }

  .nav-wordmark {
    font-family: var(--wordmark);
    font-size: 1rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--gold);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .nav-wordmark:hover {
    color: var(--gold-light);
  }

  .nav-links {
    display: flex;
    gap: 24px;
  }

  .nav-link {
    font-family: var(--display);
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--dim);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .nav-link:hover {
    color: var(--text);
  }

  .nav-link:focus-visible {
    outline: 2px solid var(--gold);
    outline-offset: 2px;
    border-radius: 2px;
  }

  .theme-toggle {
    font-family: var(--mono);
    font-size: 12px;
    font-weight: 400;
    letter-spacing: 0.06em;
    color: var(--faint);
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    transition: color 0.15s ease;
  }

  .theme-toggle:hover {
    color: var(--text);
  }

  .theme-toggle:focus-visible {
    outline: 2px solid var(--gold);
    outline-offset: 2px;
    border-radius: 2px;
  }

  .theme-toggle-light {
    display: none;
  }

  :global([data-theme="parchment"]) .theme-toggle-dark {
    display: none;
  }

  :global([data-theme="parchment"]) .theme-toggle-light {
    display: inline;
  }

  @media (max-width: 520px) {
    .site-nav {
      padding: 14px 18px;
    }

    .nav-links {
      gap: 16px;
    }
  }
</style>
