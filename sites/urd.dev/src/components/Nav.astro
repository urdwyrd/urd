---
import urdLogoDark from "../assets/logos/urd-logo-dark.svg?raw";
import urdLogoLight from "../assets/logos/urd-logo-light.svg?raw";
---

<div class="nav-bar" id="nav-bar">
  <nav class="site-nav" aria-label="Site navigation">
    <a href="/" class="nav-wordmark">
      <span class="nav-logo nav-logo-dark" aria-hidden="true" set:html={urdLogoDark} />
      <span class="nav-logo nav-logo-light" aria-hidden="true" set:html={urdLogoLight} />
      URD.DEV
    </a>
    <button
      id="nav-toggle"
      class="nav-toggle"
      type="button"
      aria-label="Open menu"
      aria-expanded="false"
      aria-controls="nav-links"
    >
      <span class="nav-toggle-icon" aria-hidden="true">≡</span>
    </button>
    <div class="nav-links" id="nav-links">
      <a href="/#documents" class="nav-link">Documents</a>
      <a href="/#updates" class="nav-link">Updates</a>
      <a href="/#architecture" class="nav-link">Architecture</a>
      <a
        href="https://github.com/urdwyrd/urd"
        class="nav-link"
        target="_blank"
        rel="noopener noreferrer"
      >
        GitHub <span aria-hidden="true">↗</span>
      </a>
      <button
        id="theme-toggle"
        class="theme-toggle"
        type="button"
        aria-label="Switch to light theme"
        title="Switch to light theme"
      >
        <span class="theme-toggle-dark">Light</span>
        <span class="theme-toggle-light">Dark</span>
      </button>
    </div>
  </nav>
</div>

<script>
  // Theme toggle
  const btn = document.getElementById('theme-toggle');
  if (btn) {
    btn.addEventListener('click', () => {
      const html = document.documentElement;
      const isParchment = html.getAttribute('data-theme') === 'parchment';
      if (isParchment) {
        html.removeAttribute('data-theme');
        localStorage.setItem('urd-theme', 'gloaming');
        btn.setAttribute('aria-label', 'Switch to light theme');
        btn.setAttribute('title', 'Switch to light theme');
      } else {
        html.setAttribute('data-theme', 'parchment');
        localStorage.setItem('urd-theme', 'parchment');
        btn.setAttribute('aria-label', 'Switch to dark theme');
        btn.setAttribute('title', 'Switch to dark theme');
      }
    });
  }

  // Mobile menu toggle
  const toggle = document.getElementById('nav-toggle');
  const links = document.getElementById('nav-links');
  if (toggle && links) {
    toggle.addEventListener('click', () => {
      const open = links.classList.toggle('open');
      toggle.setAttribute('aria-expanded', String(open));
      toggle.setAttribute('aria-label', open ? 'Close menu' : 'Open menu');
      const icon = toggle.querySelector('.nav-toggle-icon');
      if (icon) icon.textContent = open ? '✕' : '≡';
    });

    // Close menu when a nav link is clicked
    for (const link of links.querySelectorAll('.nav-link')) {
      link.addEventListener('click', () => {
        links.classList.remove('open');
        toggle.setAttribute('aria-expanded', 'false');
        toggle.setAttribute('aria-label', 'Open menu');
        const icon = toggle.querySelector('.nav-toggle-icon');
        if (icon) icon.textContent = '≡';
      });
    }
  }

  // Sticky compact nav on scroll
  const bar = document.getElementById('nav-bar');
  if (bar) {
    const onScroll = () => {
      bar.classList.toggle('scrolled', window.scrollY > 60);
    };
    window.addEventListener('scroll', onScroll, { passive: true });
    onScroll();
  }
</script>

<style>
  .nav-bar {
    position: sticky;
    top: 0;
    z-index: 10;
    background: var(--bg);
    border-bottom: 1px solid var(--border);
    transition: padding 0.25s ease, border-color 0.25s ease;
  }

  .site-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1160px;
    margin: 0 auto;
    padding: 16px 32px;
    transition: padding 0.25s ease;
  }

  /* ── Logo ── */
  .nav-logo {
    width: 24px;
    height: 24px;
    opacity: 0.85;
    vertical-align: middle;
    transition: width 0.25s ease, height 0.25s ease;
  }

  .nav-logo :global(svg) {
    width: 100%;
    height: 100%;
  }

  .nav-logo-light {
    display: none;
  }

  :global([data-theme="parchment"]) .nav-logo-dark {
    display: none;
  }

  :global([data-theme="parchment"]) .nav-logo-light {
    display: inline;
  }

  /* ── Wordmark ── */
  .nav-wordmark {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: var(--wordmark);
    font-size: 1rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--gold);
    text-decoration: none;
    transition: color 0.15s ease, font-size 0.25s ease, gap 0.25s ease;
  }

  .nav-wordmark:hover {
    color: var(--gold-light);
  }

  /* ── Menu toggle (hidden on desktop) ── */
  .nav-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    color: var(--dim);
    transition: color 0.15s ease;
  }

  .nav-toggle:hover {
    color: var(--text);
  }

  .nav-toggle-icon {
    font-size: 1.4rem;
    line-height: 1;
  }

  /* ── Links ── */
  .nav-links {
    display: flex;
    align-items: center;
    gap: 24px;
    transition: gap 0.25s ease;
  }

  .nav-link {
    font-family: var(--display);
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--dim);
    text-decoration: none;
    transition: color 0.15s ease, font-size 0.25s ease;
  }

  .nav-link:hover {
    color: var(--text);
  }

  .nav-link:focus-visible {
    outline: 2px solid var(--gold);
    outline-offset: 2px;
    border-radius: 2px;
  }

  /* ── Theme toggle ── */
  .theme-toggle {
    font-family: var(--mono);
    font-size: 12px;
    font-weight: 400;
    letter-spacing: 0.06em;
    color: var(--faint);
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    transition: color 0.15s ease, font-size 0.25s ease;
  }

  .theme-toggle:hover {
    color: var(--text);
  }

  .theme-toggle:focus-visible {
    outline: 2px solid var(--gold);
    outline-offset: 2px;
    border-radius: 2px;
  }

  .theme-toggle-light {
    display: none;
  }

  :global([data-theme="parchment"]) .theme-toggle-dark {
    display: none;
  }

  :global([data-theme="parchment"]) .theme-toggle-light {
    display: inline;
  }

  /* ── Scrolled (compact) state ── */
  .nav-bar.scrolled .site-nav {
    padding: 8px 32px;
  }

  .nav-bar.scrolled .nav-wordmark {
    font-size: 0.8rem;
    gap: 6px;
  }

  .nav-bar.scrolled .nav-logo {
    width: 18px;
    height: 18px;
  }

  .nav-bar.scrolled .nav-link {
    font-size: 0.78rem;
  }

  .nav-bar.scrolled .nav-links {
    gap: 18px;
  }

  .nav-bar.scrolled .theme-toggle {
    font-size: 11px;
  }

  /* ── Responsive ── */
  @media (max-width: 640px) {
    .site-nav {
      flex-wrap: wrap;
      padding: 14px 18px;
    }

    .nav-toggle {
      display: block;
    }

    .nav-links {
      display: none;
      flex-direction: column;
      align-items: flex-start;
      gap: 0;
      width: 100%;
      padding-top: 12px;
      border-top: 1px solid var(--border);
      margin-top: 12px;
    }

    .nav-links.open {
      display: flex;
    }

    .nav-link,
    .nav-links .theme-toggle {
      display: block;
      width: 100%;
      padding: 10px 0;
      font-size: 0.9rem;
      text-align: left;
    }

    .nav-bar.scrolled .site-nav {
      padding: 8px 18px;
    }

    .nav-bar.scrolled .nav-links {
      padding-top: 8px;
      margin-top: 8px;
    }

    .nav-bar.scrolled .nav-link,
    .nav-bar.scrolled .nav-links .theme-toggle {
      padding: 8px 0;
      font-size: 0.82rem;
    }
  }
</style>
