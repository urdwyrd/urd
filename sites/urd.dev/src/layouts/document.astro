---
import Base from "./base.astro";
import Nav from "../components/Nav.astro";
import RuneCanvas from "../components/RuneCanvas.astro";
import DocumentReviews from "../components/DocumentReviews.svelte";

interface TocEntry {
  depth: number;
  text: string;
  id: string;
}

interface TocSection {
  entry: TocEntry;
  children: TocEntry[];
}

interface Props {
  title: string;
  description: string;
  category: string;
  format: string;
  date: string;
  status: string;
  slug: string;
  tags: string[];
  details: string[];
  toc: TocEntry[];
  colour: string;
  rating: number | null;
  reviewCount: number;
}

const MONTHS: Record<string, string> = {
  "01": "Jan", "02": "Feb", "03": "Mar", "04": "Apr",
  "05": "May", "06": "Jun", "07": "Jul", "08": "Aug",
  "09": "Sep", "10": "Oct", "11": "Nov", "12": "Dec",
};

function groupToc(flat: TocEntry[]): TocSection[] {
  const sections: TocSection[] = [];
  let current: TocSection | null = null;
  for (const entry of flat) {
    if (entry.depth === 2) {
      current = { entry, children: [] };
      sections.push(current);
    } else if (entry.depth === 3 && current) {
      current.children.push(entry);
    } else if (entry.depth === 3) {
      sections.push({ entry, children: [] });
    }
  }
  return sections;
}

const { title, description, category, format, date, status, slug, tags, details, toc, colour, rating, reviewCount } = Astro.props;

const [year, month] = date.split("-");
const displayDate = `${MONTHS[month] ?? month} ${year}`;
const githubHref = `https://github.com/urdwyrd/urd/blob/main/docs/${slug}.md`;
const downloadHref = `https://raw.githubusercontent.com/urdwyrd/urd/main/docs/${slug}.md`;
const tocTree = groupToc(toc);
const hasCollapsible = tocTree.some(s => s.children.length > 0);
---

<Base title={`${title} · Urd`} description={description}>
  <Nav />
  <RuneCanvas />

  <!-- Reading progress bar -->
  <div class="reading-progress" id="reading-progress" style={`--accent: ${colour}`}>
    <div class="reading-progress-fill" id="reading-progress-fill"></div>
  </div>

  <div class="doc-page" style={`--accent: ${colour}`}>
    <!-- TOC sidebar -->
    <aside class="doc-toc" aria-label="Table of contents">
      <div class="doc-toc-panel">
        <a href="/#documents" class="doc-toc-back">
          <span aria-hidden="true">←</span> Documents
        </a>
        <div class="doc-toc-header">
          <p class="doc-toc-heading">Contents</p>
          {hasCollapsible && (
            <div class="toc-mode-toggle" id="toc-mode-toggle" role="radiogroup" aria-label="TOC mode">
              <button type="button" class="toc-mode-opt active" data-mode="smart">Smart</button>
              <button type="button" class="toc-mode-opt" data-mode="all">All</button>
            </div>
          )}
        </div>
        <ol class="doc-toc-list" role="tree">
          {tocTree.map((section) => (
            <li
              class:list={['toc-section', { 'has-children': section.children.length > 0 }]}
              role="treeitem"
              aria-expanded={section.children.length > 0 ? "false" : undefined}
              data-section-id={section.entry.id}
            >
              <div class="toc-section-row">
                {section.children.length > 0 && (
                  <button
                    type="button"
                    class="toc-toggle"
                    aria-label={`Expand ${section.entry.text}`}
                  >
                    <span class="toc-toggle-icon" aria-hidden="true">▸</span>
                  </button>
                )}
                <a href={`#${section.entry.id}`} class="doc-toc-link">{section.entry.text}</a>
              </div>
              {section.children.length > 0 && (
                <div class="toc-children-wrap">
                  <ol class="toc-children" role="group">
                    {section.children.map((child) => (
                      <li class="toc-child" role="treeitem">
                        <a href={`#${child.id}`} class="doc-toc-link">{child.text}</a>
                      </li>
                    ))}
                  </ol>
                </div>
              )}
            </li>
          ))}
        </ol>
      </div>
    </aside>

    <!-- Main content -->
    <article class="doc-content">
      <!-- Breadcrumb -->
      <nav class="doc-breadcrumb" aria-label="Breadcrumb">
        <a href="/#documents">Documents</a>
        <span aria-hidden="true">→</span>
        <span class="doc-breadcrumb-category">{category}</span>
        <span aria-hidden="true">→</span>
        <span class="doc-breadcrumb-current">{title}</span>
      </nav>

      <!-- Header -->
      <header class="doc-header">
        <div class="doc-header-accent"></div>
        <div class="doc-header-top">
          <div class="doc-header-meta">
            <span class="doc-header-pill">{format}</span>
            <span class="doc-header-sep" aria-hidden="true">◆</span>
            <span class="doc-header-category">{category}</span>
            <span class="doc-header-sep" aria-hidden="true">◆</span>
            <span class="doc-header-date">{displayDate}</span>
            <span class="doc-header-status">{status}</span>
          </div>
          <div class="doc-header-actions">
            {rating !== null && (
              <a href="#reviews" class="doc-header-rating" title={`${rating} / 5 from ${reviewCount} reviews — click for details`}>
                <span class="doc-header-rating-star">★</span> {rating}
              </a>
            )}
            <a href={githubHref} class="doc-header-action" target="_blank" rel="noopener noreferrer" title="View on GitHub">↗</a>
            <button class="doc-header-action" data-download-url={downloadHref} data-download-name={`${slug}.md`} title="Download .md">⤓</button>
          </div>
        </div>
        <h1 class="doc-title">{title}</h1>
        <p class="doc-description">{description}</p>

        {tags.length > 0 && (
          <div class="doc-tags">
            {tags.map((tag) => (
              <span class="doc-tag">{tag}</span>
            ))}
          </div>
        )}

        {details.length > 0 && (
          <div class="doc-details">
            <p class="doc-details-label">Key points</p>
            <ul class="doc-details-list">
              {details.map((detail) => (
                <li>{detail}</li>
              ))}
            </ul>
          </div>
        )}
      </header>

      <div class="prose">
        <slot />
      </div>

      <DocumentReviews slug={slug} client:load />

      <!-- Footer -->
      <footer class="doc-footer">
        <div class="doc-footer-rule"></div>
        <div class="doc-footer-actions">
          <a href="/#documents" class="doc-footer-link">
            <span aria-hidden="true">←</span> Back to Documents
          </a>
          <a href={githubHref} class="doc-footer-link" target="_blank" rel="noopener noreferrer">
            View on GitHub <span aria-hidden="true">↗</span>
          </a>
          <button class="doc-footer-link" data-download-url={downloadHref} data-download-name={`${slug}.md`}>
            Download .md
          </button>
          <button class="doc-footer-link" id="back-to-top">
            <span aria-hidden="true">↑</span> Back to top
          </button>
        </div>
        <p class="doc-footer-meta">
          {title} · {format} · {displayDate} · {status}
        </p>
      </footer>
    </article>
  </div>

  <script>
    // ── Reading progress bar ──
    const fill = document.getElementById('reading-progress-fill');
    if (fill) {
      const update = () => {
        const scrollTop = window.scrollY;
        const docHeight = document.documentElement.scrollHeight - window.innerHeight;
        const progress = docHeight > 0 ? Math.min(scrollTop / docHeight, 1) : 0;
        fill.style.transform = `scaleX(${progress})`;
      };
      window.addEventListener('scroll', update, { passive: true });
      update();
    }

    // ── Download buttons (fetch/blob) ──
    document.querySelectorAll<HTMLButtonElement>('[data-download-url]').forEach((btn) => {
      btn.addEventListener('click', () => {
        btn.disabled = true;
        const url = btn.dataset.downloadUrl!;
        const name = btn.dataset.downloadName!;
        fetch(url)
          .then((r) => r.blob())
          .then((blob) => {
            const blobUrl = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = blobUrl;
            a.download = name;
            a.click();
            URL.revokeObjectURL(blobUrl);
          })
          .finally(() => { btn.disabled = false; });
      });
    });

    // ── Back to top ──
    document.getElementById('back-to-top')?.addEventListener('click', () => {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });

    // ── Header rating link — smooth scroll to #reviews ──
    const ratingLink = document.querySelector('.doc-header-rating');
    if (ratingLink) {
      ratingLink.addEventListener('click', (e) => {
        const target = document.getElementById('reviews');
        if (target) {
          e.preventDefault();
          target.scrollIntoView({ behavior: 'smooth' });
          history.pushState(null, '', '#reviews');
        }
      });
    }

    // ── TOC tree: expand / collapse helpers ──
    const tocPanel = document.querySelector('.doc-toc-panel') as HTMLElement | null;
    const tocLinks = document.querySelectorAll('.doc-toc-link');
    const headings = document.querySelectorAll('.prose h2[id], .prose h3[id]');
    const sections = document.querySelectorAll('.toc-section.has-children');
    const modeToggle = document.getElementById('toc-mode-toggle');

    let tocMode: 'smart' | 'all' = 'smart';

    function expandSection(el: HTMLElement) {
      el.classList.add('expanded');
      el.setAttribute('aria-expanded', 'true');
    }

    function collapseSection(el: HTMLElement) {
      el.classList.remove('expanded');
      el.setAttribute('aria-expanded', 'false');
    }

    function expandAll() {
      for (const s of sections) expandSection(s as HTMLElement);
    }

    function collapseAll() {
      for (const s of sections) collapseSection(s as HTMLElement);
    }

    // Find which toc-section owns a heading id (works for both H2 and H3)
    function findOwningSection(headingId: string): HTMLElement | null {
      // Direct match (the heading is an H2 that is a section entry)
      const direct = document.querySelector(`.toc-section[data-section-id="${headingId}"]`);
      if (direct) return direct as HTMLElement;
      // It's an H3 — find its link, walk up to the parent section
      const childLink = document.querySelector(`.toc-child a[href="#${headingId}"]`);
      if (childLink) {
        const parent = childLink.closest('.toc-section');
        if (parent) return parent as HTMLElement;
      }
      return null;
    }

    function applySmartExpansion(headingId: string) {
      if (tocMode !== 'smart') return;
      const active = findOwningSection(headingId);
      for (const s of sections) {
        const el = s as HTMLElement;
        if (el === active) expandSection(el);
        else collapseSection(el);
      }
    }

    // ── Mode toggle ──
    if (modeToggle) {
      const opts = modeToggle.querySelectorAll('.toc-mode-opt');
      for (const opt of opts) {
        opt.addEventListener('click', () => {
          const mode = (opt as HTMLElement).dataset.mode as 'smart' | 'all';
          if (mode === tocMode) return;
          tocMode = mode;
          opts.forEach(o => o.classList.toggle('active', o === opt));
          if (mode === 'all') {
            expandAll();
          } else {
            collapseAll();
            const activeLink = document.querySelector('.doc-toc-link.active');
            if (activeLink) {
              const href = activeLink.getAttribute('href');
              if (href) applySmartExpansion(href.slice(1));
            }
          }
        });
      }
    }

    // ── Manual toggle buttons ──
    for (const s of sections) {
      const btn = s.querySelector('.toc-toggle');
      if (btn) {
        btn.addEventListener('click', () => {
          const el = s as HTMLElement;
          if (el.classList.contains('expanded')) collapseSection(el);
          else expandSection(el);
        });
      }
    }

    // ── Scroll spy with smart expansion ──
    if (tocLinks.length > 0 && headings.length > 0) {
      const observer = new IntersectionObserver(
        (entries) => {
          for (const entry of entries) {
            if (entry.isIntersecting) {
              const id = entry.target.id;

              // Highlight active link
              tocLinks.forEach((link) => {
                const isActive = link.getAttribute('href') === `#${id}`;
                link.classList.toggle('active', isActive);

                // Auto-scroll TOC panel to keep active item visible
                if (isActive && tocPanel) {
                  const linkEl = link as HTMLElement;
                  const panelRect = tocPanel.getBoundingClientRect();
                  const linkRect = linkEl.getBoundingClientRect();
                  const linkRelTop = linkRect.top - panelRect.top + tocPanel.scrollTop;
                  const linkH = linkRect.height;
                  const panelH = tocPanel.clientHeight;
                  const scrollTop = tocPanel.scrollTop;
                  const safeTop = scrollTop + panelH * 0.2;
                  const safeBottom = scrollTop + panelH * 0.8;
                  if (linkRelTop < safeTop || linkRelTop + linkH > safeBottom) {
                    tocPanel.scrollTo({
                      top: linkRelTop - panelH / 2 + linkH / 2,
                      behavior: 'smooth',
                    });
                  }
                }
              });

              // Smart expand/collapse
              applySmartExpansion(id);
            }
          }
        },
        { rootMargin: '-80px 0px -80% 0px' }
      );

      for (const heading of headings) {
        observer.observe(heading);
      }
    }

    // ── Smooth scroll for TOC links ──
    for (const link of tocLinks) {
      link.addEventListener('click', (e) => {
        const href = (link as HTMLAnchorElement).getAttribute('href');
        if (!href) return;
        const target = document.querySelector(href);
        if (target) {
          e.preventDefault();
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
          history.pushState(null, '', href);
        }
      });
    }

    // ── Lightbox (click-to-expand images) ──
    document.querySelectorAll<HTMLImageElement>('.prose img').forEach((img) => {
      img.addEventListener('click', () => {
        const overlay = document.createElement('div');
        overlay.className = 'lightbox-overlay';
        const clone = document.createElement('img');
        clone.src = img.src;
        clone.alt = img.alt;
        const hint = document.createElement('div');
        hint.className = 'lightbox-hint';
        hint.textContent = 'Click or press Escape to close';
        overlay.appendChild(clone);
        overlay.appendChild(hint);
        document.body.appendChild(overlay);
        document.body.style.overflow = 'hidden';

        const close = () => {
          overlay.remove();
          document.body.style.overflow = '';
        };
        overlay.addEventListener('click', close);
        const onKey = (e: KeyboardEvent) => {
          if (e.key === 'Escape') { close(); document.removeEventListener('keydown', onKey); }
        };
        document.addEventListener('keydown', onKey);
      });
    });
  </script>
</Base>

<style>
  /* ── Reading progress bar ── */
  .reading-progress {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    z-index: 20;
    background: transparent;
  }

  .reading-progress-fill {
    height: 100%;
    background: var(--accent);
    transform-origin: left;
    transform: scaleX(0);
    opacity: 0.8;
    transition: transform 0.1s linear;
  }

  /* ── Page Grid ── */
  .doc-page {
    max-width: 1160px;
    margin: 0 auto;
    padding: 0 32px 96px;
    display: grid;
    grid-template-columns: 240px 1fr;
    gap: 48px;
  }

  /* ── Article content ── */
  .doc-content {
    min-width: 0;
  }

  /* ── Breadcrumb ── */
  .doc-breadcrumb {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 24px 0;
    font-family: var(--mono);
    font-size: 12px;
    color: var(--faint);
    letter-spacing: 0.02em;
  }

  .doc-breadcrumb a {
    color: var(--faint);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .doc-breadcrumb a:hover {
    color: var(--accent);
  }

  .doc-breadcrumb-category {
    text-transform: capitalize;
    color: var(--accent);
  }

  .doc-breadcrumb-current {
    color: var(--dim);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 300px;
  }

  /* ── TOC Sidebar ── */
  .doc-toc-panel {
    position: sticky;
    top: 72px;
    background: var(--raise);
    border-radius: 8px;
    padding: 20px;
    max-height: calc(100vh - 96px);
    overflow-y: auto;
    box-shadow: var(--toc-shadow);
    scrollbar-gutter: stable;
    scrollbar-width: thin;
    scrollbar-color: transparent transparent;
  }

  .doc-toc-panel:hover {
    scrollbar-color: var(--border-light) transparent;
  }

  .doc-toc-panel::-webkit-scrollbar {
    width: 6px;
  }

  .doc-toc-panel::-webkit-scrollbar-track {
    background: transparent;
  }

  .doc-toc-panel::-webkit-scrollbar-thumb {
    background: transparent;
    border-radius: 3px;
    transition: background 0.3s ease;
  }

  .doc-toc-panel:hover::-webkit-scrollbar-thumb {
    background: var(--border-light);
  }

  .doc-toc-panel::-webkit-scrollbar-thumb:hover {
    background: var(--faint);
  }

  .doc-toc-back {
    display: block;
    font-family: var(--mono);
    font-size: 11px;
    color: var(--faint);
    text-decoration: none;
    margin-bottom: 16px;
    padding-bottom: 12px;
    border-bottom: 1px solid var(--border);
    transition: color 0.15s ease;
    letter-spacing: 0.02em;
  }

  .doc-toc-back:hover {
    color: var(--accent);
  }

  .doc-toc-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 14px;
  }

  .doc-toc-heading {
    font-family: var(--display);
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: var(--accent);
    opacity: 0.7;
  }

  .toc-mode-toggle {
    display: flex;
    border: 1px solid var(--border);
    border-radius: 4px;
    overflow: hidden;
  }

  .toc-mode-opt {
    font-family: var(--mono);
    font-size: 10px;
    font-weight: 400;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    color: var(--faint);
    background: transparent;
    border: none;
    padding: 2px 8px;
    cursor: pointer;
    transition: color 0.15s ease, background 0.15s ease;
    line-height: 1.6;
  }

  .toc-mode-opt:hover {
    color: var(--dim);
  }

  .toc-mode-opt.active {
    color: var(--accent);
    background: color-mix(in srgb, var(--accent) 8%, transparent);
  }

  .toc-mode-opt:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: -1px;
    border-radius: 2px;
  }

  .doc-toc-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  /* ── Section row (toggle + link) ── */
  .toc-section-row {
    display: flex;
    align-items: flex-start;
  }

  .toc-toggle {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 27px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    color: var(--faint);
    transition: color 0.15s ease;
  }

  .toc-toggle:hover {
    color: var(--accent);
  }

  .toc-toggle-icon {
    font-family: var(--mono);
    font-size: 9px;
    display: inline-block;
    transition: transform 0.15s ease;
  }

  .toc-section.expanded .toc-toggle-icon {
    transform: rotate(90deg);
  }

  /* Align H2s without toggles with those that have toggles */
  .toc-section:not(.has-children) .toc-section-row {
    padding-left: 20px;
  }

  /* ── TOC links ── */
  .doc-toc-link {
    font-family: var(--mono);
    font-size: 12px;
    color: var(--faint);
    text-decoration: none;
    display: block;
    padding: 5px 10px;
    border-left: 2px solid transparent;
    border-radius: 0 2px 2px 0;
    transition: color 0.15s ease, border-color 0.15s ease, background 0.15s ease;
    line-height: 1.4;
  }

  .doc-toc-link:hover {
    color: var(--dim);
    background: var(--deep);
  }

  .doc-toc-link.active {
    color: var(--accent);
    border-left-color: var(--accent);
    background: color-mix(in srgb, var(--accent) 6%, transparent);
  }

  .doc-toc-link:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 1px;
    border-radius: 2px;
  }

  /* ── Collapsible children ── */
  .toc-children-wrap {
    display: grid;
    grid-template-rows: 0fr;
    transition: grid-template-rows 0.2s ease;
  }

  .toc-children-wrap > .toc-children {
    overflow: hidden;
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1px;
  }

  .toc-section.expanded .toc-children-wrap {
    grid-template-rows: 1fr;
  }

  .toc-child .doc-toc-link {
    font-size: 11px;
    padding-left: 34px;
    opacity: 0.75;
  }

  .toc-child .doc-toc-link.active {
    opacity: 1;
  }

  /* ── Document Header ── */
  .doc-header {
    margin-bottom: 48px;
    padding-bottom: 32px;
    border-bottom: 1px solid var(--border);
  }

  .doc-header-accent {
    width: 48px;
    height: 3px;
    background: var(--accent);
    border-radius: 2px;
    margin-bottom: 20px;
    opacity: 0.8;
  }

  .doc-header-top {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 12px;
    margin-bottom: 16px;
  }

  .doc-header-meta {
    display: flex;
    align-items: center;
    gap: 10px;
    flex-wrap: wrap;
  }

  .doc-header-actions {
    display: flex;
    gap: 4px;
    flex-shrink: 0;
  }

  .doc-header-action {
    font-size: 13px;
    line-height: 1;
    color: var(--faint);
    background: transparent;
    border: 1px solid var(--border);
    border-radius: 3px;
    padding: 4px 7px;
    text-decoration: none;
    cursor: pointer;
    transition: color 0.15s ease, border-color 0.15s ease;
  }

  .doc-header-action:hover {
    color: var(--accent);
    border-color: var(--border-light);
  }

  .doc-header-action:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 1px;
  }

  .doc-header-rating {
    font-family: var(--mono);
    font-size: 12px;
    line-height: 1;
    color: var(--faint);
    text-decoration: none;
    padding: 4px 8px;
    border: 1px solid var(--border);
    border-radius: 3px;
    margin-right: 8px;
    transition: color 0.15s ease, border-color 0.15s ease;
  }

  .doc-header-rating:hover {
    color: var(--gold);
    border-color: var(--border-light);
  }

  .doc-header-rating-star {
    color: var(--gold);
    font-size: 11px;
  }

  .doc-header-pill {
    font-family: var(--display);
    font-size: 10px;
    font-weight: 600;
    text-transform: uppercase;
