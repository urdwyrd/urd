{
  "world": {
    "name": "conditional-visibility",
    "urd": "1",
    "description": "Exercises the conditional visibility object form on a property."
  },
  "types": {
    "Inscription": {
      "traits": ["interactable"],
      "properties": {
        "secret_message": {
          "type": "string",
          "default": "The key is under the stone",
